# SIPREMS Global Environment Variables
# Root Level .env Template

# === Database (Supabase) ===
# Format: postgresql://[user]:[password]@[host]:[port]/[db]
DATABASE_URL=your_postgresql_url_here

# === Supabase Keys ===
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key

# === Google Gemini AI ===
# Used for prediction insights and calendar suggestions
GEMINI_API_KEY=your_gemini_api_key

# === Firebase Configuration ===
# Used for Authentication
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_firebase_auth_domain
VITE_FIREBASE_PROJECT_ID=your_firebase_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_firebase_storage_bucket
VITE_FIREBASE_MESSAGING_SENDER_ID=your_firebase_messaging_sender_id
VITE_FIREBASE_APP_ID=your_firebase_app_id

# === Service Internal URLs ===
# Used inside Docker Compose
ML_SERVICE_URL=http://ml-service:8001
BACKEND_URL=http://backend:8000

# === ML Parameters (Optional Overrides) ===
# TRAINING_WINDOW_DAYS=365
# MIN_ACCURACY_THRESHOLD=82.0
